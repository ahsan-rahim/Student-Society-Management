@model IEnumerable<Test3.Models.Event>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@if (!ViewData["role"].Equals("patron"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Event_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Society.Society_Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Patron_approval)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Event_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Society.Society_Name)
            </td>
            <td>
                @if (!item.Patron_approval)
                {
                    <img src="~/Images/error.png" />
                }
                else
                {
                    <img src="~/Images/success.png" />
                }
                @*@Html.DisplayFor(modelItem => item.Patron_approval)*@
            </td>
            <td>
                @if (ViewData["role"].Equals("patron"))
                {
                    if (!item.Patron_approval)
                    {
                        @Html.ActionLink("Approve", "Edit", new { id = item.Event_ID }, new { @class = "btn btn-success" })
                    }
                    else
                    {
                        @Html.ActionLink("Reject", "Edit", new { id = item.Event_ID }, new { @class = "btn btn-danger" })
                    }
                }
                else
                {

                    @Html.ActionLink("Edit", "Edit", new { id = item.Event_ID }) @:|
                    @Html.ActionLink("Details", "Details", new { id = item.Event_ID }) @:|
                    @Html.ActionLink("Delete", "Delete", new { id = item.Event_ID })
                }
            </td>
        </tr>
    }

</table>
