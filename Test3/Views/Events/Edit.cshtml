@model Test3.Models.Event

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


    <h4>Event</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Event_ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Event_name, htmlAttributes: new { @class = "col-form-label col-lg-2" })
        <div class="col-lg-10">
            @Html.EditorFor(model => model.Event_name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Event_name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Society_ID, "Society_ID", htmlAttributes: new { @class = "col-form-label col-lg-2" })
        <div class="col-lg-10">
            @Html.DropDownList("Society_ID", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Society_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    if(ViewData["role"].Equals("patron"))
    {
        <div class="form-group">
            <div class="col-lg-10">
                <div class="custom-control custom-checkbox">
                    @Html.EditorFor(model => model.Patron_approval, new { htmlAttributes = new { @class = "custom-control-input" } })
                    @Html.LabelFor(model => model.Patron_approval, htmlAttributes: new { @class = "custom-control-label" })
                    @Html.ValidationMessageFor(model => model.Patron_approval, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    }
    <div class="form-group">
        <div class="col-lg-10">
            <input type="submit" value="Save" class="btn btn-primary">
        </div>
    </div>

}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
