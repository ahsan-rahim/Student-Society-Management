@model Test3.Models.User

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>.::Society Management System::.</title>
    @*<link rel="stylesheet" href="https://webapps.iba.edu.pk/sfs/css/all.css" type="text/css" media="all">*@
    <style>
        .aaa {
            border: none;
            padding: 0.6em 1.2em;
            background: #A5281B;
            color: #fff;
            font-family: 'Lato', Calibri, Arial, sans-serif;
            font-size: 11px;
            letter-spacing: 1px;
            text-transform: uppercase;
            cursor: pointer;
            display: inline-block;
            margin: 3px 2px;
        }

        body {
            font-family: '../fonts/source_sans_proregular', sans-serif, Arial, Helvetica, sans-serif;
            font-size: 14px;
            line-height: 17px;
            margin: 0;
            color: #666;
        }

        .headings {
            margin: auto;
            width: 70%;
        }

        .heading {
            margin: 0 auto;
            width: 32%;
            border: 2px solid #fff;
            padding: 20px;
            margin-top: 100px;
            background-color: #700F1A;
            text-align: center;
            font-size: 28px;
            color: #fff;
        }

        .login-page {
            width: 80%;
            padding: 0 0 0;
            margin: 0 auto;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 45px;
            text-align: center;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }

        form, fieldset {
            margin: 0;
            padding: 0;
            border-style: none;
        }

        .form input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0 0 15px;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
            border-left: 3px solid green;
        }

        .form .login {
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            background: #4CAF50;
            width: 100%;
            border: 0;
            padding: 15px;
            color: #FFFFFF;
            font-size: 14px;
            cursor: pointer;
        }
    </style>

    @*<link id="avast_os_ext_custom_font" href="chrome-extension://eofcbnmajmjmplflapaojjnihcjkigck/common/ui/fonts/fonts.css" rel="stylesheet" type="text/css">*@
</head>
<body>
    <div class="heading">LOGIN</div>
    <div class="login-page">
        <div class="form">
                <form class="login-form" action="~/Views/Users/Index.cshtml" method="post" runat="server">
                    <input type="text" placeholder="Erp Id" id="user_name" name="username" required="">
                    <input type="password" placeholder="password" id="user_pass" name="password" required="">
                    <input type="submit" class="login" value="Login">
                </form>
        </div>
    </div>
</body>
</html>