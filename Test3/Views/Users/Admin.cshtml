@model Test3.Models.User

@{
    ViewBag.Title = "Admin";
}

<h2>Adimn</h2>

<style>
    .button {
        font-family: "Roboto", sans-serif;
        text-transform: uppercase;
        outline: 0;
        background: darkred;
        width: 80%;
        border-radius: 50px;
        border: 0;
        padding: 10px;
        color: #FFFFFF;
        font-size: 14px;
        cursor: pointer;
        margin-top: 3%;
    }

    #login-page {
        width: 80%;
        padding: 0 0 0;
        margin: 0 auto;
    }

    .form {
        position: relative;
        z-index: 1;
        background: #FFFFFF;
        max-width: 360px;
        margin: 0 auto 100px;
        padding: 30px 30px 25px 30px;
        text-align: center;
    }

    .btn-primary {
        background: darkred;
        border-color: darkred;
        border-radius: 40px;
        padding: 3%;
    }
</style>


<div class="col-md-4 col-xs-9" id="login-page">
    <div class="form">
        <div class="col-md-15" style="margin-bottom: 4%;">
            @Html.ActionLink("Add User", "Create", "Users", null, new { @class = "btn btn-primary col-md-9 col-sm-8 col-xs-8" })
        </div>
        <div class="col-md-15" style="margin-bottom: 4%;">
            @Html.ActionLink("Add Room", "Create", "Rooms", null, new { @class = "btn btn-primary col-md-9 col-sm-8 col-xs-8" })
        </div>
        <div class="col-md-15" style="margin-bottom: 4%;">
            @Html.ActionLink("Add Society", "Create", "Societies", null, new { @class = "btn btn-primary col-md-9 col-sm-8 col-xs-8" })
        </div>
    </div>
</div>