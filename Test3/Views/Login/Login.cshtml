@model Test3.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <style>
        #login-page {
            width: 80%;
            padding: 0 0 0;
            margin: 0 auto;
        }

        .input {
            font-family: "Roboto", sans-serif;
            outline: 0;
            background: #f2f2f2;
            width: 100%;
            border: 0;
            margin: 0;
            padding: 15px;
            box-sizing: border-box;
            font-size: 14px;
            border-left: 3px solid green;
        }

        .login {
            font-family: "Roboto", sans-serif;
            text-transform: uppercase;
            outline: 0;
            background: #4CAF50;
            width: 80%;
            border-radius: 50px;
            border: 0;
            padding: 10px;
            color: #FFFFFF;
            font-size: 14px;
            cursor: pointer;
            margin-top: 3%;
        }

        .heading {
            margin: 0 auto;
            /*width: 32%;*/
            max-width:360px;
            border: 2px solid #fff;
            padding: 10px;
            margin-top: 70px;
            background-color: #700F1A;
            text-align: center;
            font-size: 28px;
            color: #fff;
        }

        .form {
            position: relative;
            z-index: 1;
            background: #FFFFFF;
            max-width: 360px;
            margin: 0 auto 100px;
            padding: 30px 30px 25px 30px;
            text-align: center;
            box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.2), 0 5px 5px 0 rgba(0, 0, 0, 0.24);
        }
    </style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    
    <div class="col-md-4 col-xs-9" id="login-page">
        <div class="heading">LOGIN</div>
        <div class="form">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "input", placeholder = "UserID" } })
                @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                @Html.EditorFor(model => model.User_Pass, new { htmlAttributes = new { @class = "input", placeholder = "Password" } })
                @Html.ValidationMessageFor(model => model.User_Pass, "", new { @class = "text-danger" })
            </div>

            <div class="form-group">
                <input type="submit" value="Login" class="login" />
            </div>
        </div>
    </div>
</div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
